@model List<SignalRWebUI.Dtos.DiscountDtos.ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İndirim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Değer</th>
                                    <th scope="col">Telefon Numarası</th>
                                    <th scope="col">Mail Adresi</th>
                                    <th scope="col">Rezervasyon Tarihi</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@counter</td>
                                        <td>@item.Name</td>
                                        <td>@item.PersonCount</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.Date.ToString("g")</td>
                                        <td>
                                            @if (@item.Status == 0)
                                            {
                                                <span class="badge badge-warning">Beklemede</span>
                                            }
                                            else if (@item.Status == 1)
                                            {
                                                <span class="badge badge-danger">İptal Edildi</span>
                                            }
                                            else if (@item.Status == 2)
                                            {
                                                <span class="badge badge-success">Kabul Edildi</span>
                                            }
                                        </td>
                                        <td><a href="/Booking/DeleteBooking/@item.BookingID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Booking/UpdateBooking/@item.BookingID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                    counter++;
                                }
                            </tbody>
                        </table>
                        <a href="/Booking/CreateBooking" class="btn btn-outline-primary">Yeni Rezervasyon Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

