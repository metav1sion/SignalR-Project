@model SignalRWebUI.Dtos.ContactDtos.UpdateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Yazısı Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                @Html.HiddenFor(x=>x.ContactID)
                                <label>Konum</label>
                                <input type="text" asp-for="Location" class="form-control">
                                <br />
                                <label>Telefon Numarası</label>
                                <input type="text" asp-for="PhoneNumber" class="form-control">
                                <br/>
                                <label>Mail Adresi</label>
                                <input type="email" asp-for="Mail" class="form form-control" />
                                <br/>
                                <label>Son Yazı</label>
                                @Html.TextAreaFor(x=>x.FooterDescription,3,5,new{@class="form-control"})
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Yazıyı Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

